<Window x:Class="TestController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestController"
        mc:Ignorable="d"
        Title="MainWindow" Height="517" Width="819">
    <Grid Margin="0,0,0,-6">
        <Grid x:Name="GridTestCreator" HorizontalAlignment="Left" Height="357" Margin="174,58,0,0" VerticalAlignment="Top" Width="599" Visibility="Visible">
            <TextBox x:Name="TextBoxNameOfTest" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" VerticalAlignment="Top" Width="206" Margin="5,4,0,0" Text="Enter name of test" PreviewMouseDown="TextBoxNameOfTest_PreviewMouseDown"/>
            <Button x:Name="ButtonAddQuestion" Content="add question" Margin="357,135,152,200" Click="ButtonAddQuestion_Click"/>
            <TextBox x:Name="TextBoxTextOfQuestion" TextWrapping="Wrap" Text="Enter text of question" Margin="5,30,152,279" PreviewMouseDown="TextBoxTextOfQuestion_PreviewMouseDown"/>
            <Button x:Name="ButtonAddAnswer" Content="add answer" HorizontalAlignment="Left" Height="20" Margin="357,110,0,0" VerticalAlignment="Top" Width="90" Click="ButtonAddAnswer_Click"/>
            <TextBox x:Name="TextBoxTextOfAnswer" HorizontalAlignment="Left" Height="22" Margin="5,83,0,0" TextWrapping="Wrap" Text="Enter text of answer" VerticalAlignment="Top" Width="442" PreviewMouseDown="TextBoxTextOfAnswer_PreviewMouseDown"/>
            <WrapPanel x:Name="WrapPanelAnswers" HorizontalAlignment="Left" Height="119" Margin="5,110,0,0" VerticalAlignment="Top" Width="347" Orientation="Vertical"/>
            <Button x:Name="ButtonCreateTest" Content="CREATE TEST" HorizontalAlignment="Left" Height="30" Margin="357,199,0,0" VerticalAlignment="Top" Width="90" Click="ButtonCreateTest_Click" FontSize="12"/>
            <ComboBox x:Name="ComboBoxSelectTypeOfAnswer" HorizontalAlignment="Left" Height="20" Margin="219,4,0,0" VerticalAlignment="Top" Width="183">
                <ComboBoxItem Content="One answer question" IsSelected="True"/>
                <ComboBoxItem Content="Several answer question"/>
                <ComboBoxItem Content="Sort answer question"/>
                <ComboBoxItem Content="Open answer question"/>
            </ComboBox>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="368" Margin="0,-30,0,0" VerticalAlignment="Top" Width="182">
            <Button x:Name="ButtonTestCreator" Content="Test creator" Margin="31,90,29,235" Click="ButtonTestCreator_Click"/>
            <Button Content="Poll creator" Margin="31,138,29,189"/>
            <Button Content="Tests" Margin="19,218,20,105"/>
            <Button Content="Users" Margin="19,268,20,53"/>
            <Button x:Name="ButtonTGCheckChat" Content="TGCheckChat" Margin="22,184,29,155" Click="ButtonTGCheckChat_Click"/>
        </Grid>
    </Grid>
</Window>
